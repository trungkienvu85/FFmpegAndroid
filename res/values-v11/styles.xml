<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseThemeDisabled" parent="Theme.AppCompat.NoActionBar">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="AppBaseThemeEnabled" parent="android:Theme.Holo">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="actionBarItemBackground">@drawable/actionbar_bck</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_background</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:actionBarSize">@dimen/ac_hieght</item>
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:height">@dimen/ac_hieght</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme.Holo">
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="CircularProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <dimen name="ac_hieght">50dp</dimen>

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/MyFadingActionBarTitleText</item>
    </style>

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="MyFadingActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_color</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>