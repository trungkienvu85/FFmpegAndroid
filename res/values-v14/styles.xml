<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseThemeEnabled" parent="android:Theme.Holo">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:actionBarSize">@dimen/ac_hieght</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_home</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_bck</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_background</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:height">@dimen/ac_hieght</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="ac_hieght">50dp</dimen>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/MyFadingActionBarTitleText</item>
    </style>

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="MyFadingActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_color</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>